<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<style>

body, table, div, td, input {
    font-family: Helvetica, Tahoma, sans-serif;
    font-size: 12px;
    font-weight: normal;
    color: #000000;
}

h1 {
	margin: 15px 10px 30px 10px;
	page-break-before: always;
}

h2 {
	margin: 5px 10px;
}

table 
{
	border-collapse: collapse;
	margin: 5px 10px;
    border: 1px solid #000000;
	width: 90%;
}

td, th {
  border: 1px dotted #000000;
  padding: 4px;
}

	</style>
</head>
<body>

	<% @orders.each do |order| -%>
	<h1>Tentoexpress.jp</h1>
	<h2><%= order.cart.user.name%></h2>
	<div style="margin: 5px 0 15px 10px">
	<p style="margin: 0">
	<%= order.cart.ship_to.prefecture %>
	<%= order.cart.ship_to.city %>
	<%= order.cart.ship_to.address %>
	</p><p style="margin: 0">
	<%= order.cart.ship_to.postal_code%>
	<p style="margin: 0">
	<%= order.cart.ship_to.phone%>
	</div>

	<table>
		<tr>
			<th>Item</th>
			<th>En</th>
			<th>Unit</th>
			<th>Qty</th>
			<th>Price</th>
			<th>Amount</th>
			<th>Weight</th>
		<% order.line_items.each do |li| -%>
		<tr>
			<td><%=li.catalog_item.name_ja%></td>
			<td><%=li.catalog_item.name_en%></td>
			<td><%=li.item_unit.name%></td>
			<td align="right"><%=li.quantity%></td>
			<td align="right">&yen;<%=li.price%></td>
			<td align="right">&yen;<%=li.item_amount%></td>
			<td align="right"><%=li.item_weight%>Kg</td>
		</tr>
		<% end -%>
		<tr class="totals">
			<td align="right" colspan="5">Totals:</td>
			<td align="right">&yen;<%=order.amount%></td>
			<td align="right"><%=order.weight%>Kg</td>
		</tr>
	</table>
    	
	<% end -%>
</body>
