

<% if flash[:error] -%>
<div style="border:1px solid red;color:red;background-color:#FFC0CB;margin:5px;padding:2px">
<%= flash[ :error ] %>
<% flash.discard %>
</div>
<% end -%>

<div style="padding: 10px">
  <% form_remote_tag :url => session_path, :update => 'account_box'  do -%>
    <table cellspacing="5" style="padding:5px;text-align:right;margin:auto">
      <tr>
        <td><%= label_tag 'login', I18n.t(:login) %></td>
        <td><%= text_field_tag 'login', @login, :size => 15 %></td>
      </tr>
      <tr>
        <td><%= label_tag 'password', I18n.t(:password) %></td>
        <td><%= password_field_tag 'password', nil, :size => 15 %></td>
      </tr>
      <td colspan="2">
      	<br>
      	<%= submit_tag I18n.t(:log_in) %>
	  	&nbsp;&nbsp;<%= link_to_function "#{I18n.t(:not_regestered)}", "boxReload('account_box-signup')"  %>
	  </td>
    </table>

<!-- Uncomment this if you want this functionality
<p><%= label_tag 'remember_me', I18n.t(:remember_me) %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>
-->
  <% end -%>
</div>
<%= javascript_tag "$('account_box_label').update('#{I18n.t(:log_in)}');"  %>
