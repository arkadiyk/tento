<% if @cart_lines_by_supplier.empty? %>
  <%= render :partial => 'cart/empty_cart' %>
<% else %>
  <table id="checkout_table" cellspacing="0" width="100%">
  <% @cart_lines_by_supplier.each do | supplier, line_items| %>
    <%= render :partial => 'cart/supplier', :object => supplier %>
    <% for item in line_items %>
      <tr id="co_cart_line_<%=item.id%>">
        <%= render :partial => 'cart_line', :object => item %>
      </tr>
    <% end %>
    <%= render :partial => 'supplier_total', 
      :object => { :id => supplier.id,
                   :amount =>  line_items.sum { |cl| cl.price * cl.quantity },
                   :weight =>  line_items.sum { |cl| cl.item_unit.weight * cl.quantity },
				   :points =>  line_items.sum { |cl| cl.points * cl.quantity }}
       %>
  <% end %>
  </table>
<% end %>
